{
  "compilerOptions": {
    "target": "es6",
    "skipLibCheck": true,
    "module": "commonjs",
    "jsx": "react-native",
    "outDir": "./lib",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["./src", "node_modules/react-native-redash/lib/typescript/v1/index.d.ts"],
  "exclude": [
    "**/node_modules/**",
    "**/lib/**",
    "**/coverage/**",
    "**/demos/**"
  ]
}
